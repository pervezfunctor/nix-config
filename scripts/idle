#! /usr/bin/env bash

IDLE_SCRIPTS_DIR="${HOME}/nix-config/scripts"
SUSPEND_ENABLED=true

LOCK_TIME=180
DPMS_TIME=210
SUSPEND_TIME=600

while [[ $# -gt 0 ]]; do
  case "$1" in
  --no-suspend)
    SUSPEND_ENABLED=false
    shift
    ;;
  *)
    echo "Unknown option: $1" >&2
    echo "Usage: $0 [--no-suspend]" >&2
    exit 1
    ;;
  esac
done

if command -v systemd-detect-virt >/dev/null; then
  if systemd-detect-virt --quiet; then
    SUSPEND_ENABLED=false
  fi
fi

has_cmd() {
  command -v "$1" >/dev/null 2>&1
}

if [[ "$XDG_CURRENT_DESKTOP" == *"Hyprland"* ]] && has_cmd hypridle; then
  pkill hypridle
  hypridle_args=(
    --general "lock_cmd=bash -c '${IDLE_SCRIPTS_DIR}/lock'"
    --listener "timeout=${LOCK_TIME}" "on-timeout=bash -c '${IDLE_SCRIPTS_DIR}/lock'"
    --listener "timeout=${DPMS_TIME}" "on-timeout=bash -c '${IDLE_SCRIPTS_DIR}/monitor off'"
    --listener "on-resume=bash -c '${IDLE_SCRIPTS_DIR}/monitor on'"
  )

  if [ "$SUSPEND_ENABLED" = true ]; then
    hypridle_args+=("--listener" "timeout=${SUSPEND_TIME}" "on-timeout=systemctl suspend")
  fi

  hypridle "${hypridle_args[@]}"
elif [[ "$XDG_CURRENT_DESKTOP" == *"mango"* ]] ||
  [[ "$XDG_CURRENT_DESKTOP" == *"niri"* ]] ||
  [[ "$XDG_CURRENT_DESKTOP" == *"sway"* ]]; then
  has_cmd swayidle || {
    echo "swayidle not found" >&2
    exit 1
  }
  pkill swayidle

  swayidle_args=(
    "timeout" "${LOCK_TIME}" "${IDLE_SCRIPTS_DIR}/lock"
    "timeout" "${DPMS_TIME}" "${IDLE_SCRIPTS_DIR}/monitor off"
    "resume" "${IDLE_SCRIPTS_DIR}/monitor on"
  )

  if [ "$SUSPEND_ENABLED" = true ]; then
    swayidle_args+=("timeout" "${SUSPEND_TIME}" 'systemctl suspend')
  fi

  swayidle -w "${swayidle_args[@]}"
else
  echo "No compatible compositor or idle manager found" >&2
  exit 1
fi
